@model Category
@{
    ViewData["Title"] = "Edit";
}


<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
        </div>
        <div class="mb-3">
            <div>
                <label asp-for="Name"></label>
                <input disabled asp-for="Name" class="form-control" />
            </div>
            <div>
                <label asp-for="DisplayOrder"></label>
                <input disabled asp-for="DisplayOrder" class="form-control" />
            </div>
            <div class="mt-2">
                <button type="submit" class="btn btn-warning" style="width:150px">Delete</button>
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}


