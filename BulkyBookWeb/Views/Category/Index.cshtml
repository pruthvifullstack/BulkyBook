@model IEnumerable<Category>
@{
    ViewData["Title"] = "Category";
}

<div class="container">
    <partial name="_Notification"/>
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create new category
            </a>
        </div>
    </div>


<h1>Index Category</h1>
<table class="table table-bordered table-striped" style="width: 100%;">
    <thead>
        <tr>
            <th style="color: #fff;">Category Name</th>
            <th style="color: #fff;">Display Order</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%" style="color: #fff;">@obj.Name</td>
                <td width="30%" style="color: #fff;">@obj.DisplayOrder</td>
                <td>
                    <div class="w-75 btn-group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id = "@obj.Id" class="btn btn-primary">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                    </div>
                </td>
                <td>
                    <div class="w-75 btn-group">
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-warning">
                                <i class="bi bi-x-circle"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>            
        }
    </tbody>
</table>
</div>
