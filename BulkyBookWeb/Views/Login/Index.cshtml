@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<form method="post" asp-controller="Login" asp-action="Authenticate">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Login</h2>
        </div>
        <div asp-validation-summary="All"></div>
        <div>
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <br />
        <div>
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" type="password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <br />
        <div class="mt-2">
            <button type="submit" class="btn btn-primary" style="width:150px">Login</button>
            <a asp-controller="Registration" asp-action="Index" class="btn btn-secondary" style="width:150px">Register</a>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}